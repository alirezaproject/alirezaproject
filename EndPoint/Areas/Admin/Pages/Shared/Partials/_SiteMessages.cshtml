@if (TempData["SuccessMessage"] != null ||
     TempData["ErrorMessage"] != null ||
     TempData["InfoMessage"] != null ||
     TempData["WarningMessage"] != null)
{
    if (TempData["SuccessMessage"] != null)
    {
        <script>

            $(document).ready(function() {
                toastr.success('@TempData["SuccessMessage"]', 'پیغام موفقیت', {
                    rtl: true,
                    positionClass: 'toast-top-left'
                });
            });
        </script>
    }
    if (TempData["ErrorMessage"] != null)
    {
        
        <script>

            $(document).ready(function() {
                toastr.error('@TempData["ErrorMessage"]', 'پیغام موفقیت', {
                    rtl: true,
                    positionClass: 'toast-top-left'
                });
            });
        </script>

    }
    if (TempData["InfoMessage"] != null)
    {
        
        <script>

            $(document).ready(function() {
                toastr.info('@TempData["InfoMessage"]', 'پیغام موفقیت', {
                    rtl: true,
                    positionClass: 'toast-top-left'
                });
            });
        </script>
    }
    if (TempData["WarningMessage"] != null)
    {
        
        <script>

            $(document).ready(function() {
                toastr.warning('@TempData["WarningMessage"]', 'پیغام موفقیت', {
                    rtl: true,
                    positionClass: 'toast-top-left'
                });
            });
        </script>
    }
}