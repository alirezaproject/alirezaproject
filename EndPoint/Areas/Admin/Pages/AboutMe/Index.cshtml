@page
@model EndPoint.Areas.Admin.Pages.AboutMe.IndexModel
@{
    ViewData["Title"] = "مدیریت درباره من";
}

@section Styles
{

}

@section Scripts
{
    <script src="/AdminAssets/js/scripts/datatables/datatable.js"></script>
}

<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-body">
            <div class="row">
            </div>
            
            <section id="basic-datatable">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-content">
                                <div class="card-body card-dashboard">

                                    <div class="table-responsive">
                                        <table class="table zero-configuration">
                                            <thead>
                                                <tr>
                                                    <th>ردیف</th>
                                                    <th>نام</th>
                                                    <th>مکان</th>
                                                    <th>عکس</th>
                                                    <th>دستورات</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            @foreach (var item in Model.Input)
                                            {
                                                <tr>
                                                    <td>@item.AboutMeId</td>
                                                    <td>@item.Title</td>
                                                    <td>@item.Location</td>
                                                    <td>@item.ImageAddress</td>
                                                    <td>
                                                        <a asp-page="./Edit" asp-route-aboutMeId="@item.AboutMeId" class="btn btn-warning">ویرایش</a>
                                                    </td>
                                                </tr>
                                            }
                                           
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>


        </div>
    </div>
</div>