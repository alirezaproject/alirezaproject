@page
@model IndexModel


<div id="home">
    <div id="about">
        <div id="resume">
            <div id="portfolio">
                <div id="blog">
                    <div id="contact">

                        <div class="header-mobile">
                            <a class="header-toggle"><i class="fas fa-bars"></i></a>
                            <h2>باها</h2>
                        </div>

                        <!-- Left Block -->
                        <nav class="header-main" data-simplebar>

                            <!-- Logo -->
                            <div class="logo">
                                <img src="img/logo.png" alt="">
                            </div>

                            <ul>
                                <li data-tooltip="خانه" data-position="top">
                                    <a href="#home" class="icon-h fas fa-house-damage"></a>
                                </li>
                                <li data-tooltip="درباره" data-position="top">
                                    <a href="#about" class="icon-a fas fa-user-tie"></a>
                                </li>
                                <li data-tooltip="مهارت ها" data-position="top">
                                    <a href="#resume" class="icon-b fas fa-receipt"></a>
                                </li>
                                <li data-tooltip="نمونه‌کارها" data-position="top">
                                    <a href="#portfolio" class="icon-p fas fa-clone"></a>
                                </li>
                                <li data-tooltip="تماس" data-position="bottom">
                                    <a href="#contact" class="icon-c fas fa-envelope"></a>
                                </li>
                            </ul>

                            <!-- Sound wave -->
                            <a class="music-bg">
                                <div class="lines">
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                </div>
                                <p> صدا </p>
                            </a>
                        </nav>

                        <!-- Home Section -->
                        @await Component.InvokeAsync("HomeSection")

                        <!-- About Section -->
                        @await Component.InvokeAsync("AboutSection")

                        <!-- Resume Section -->
                        @await Component.InvokeAsync("ResumeSection")

                        <!-- Portfolio Section -->
                        @await Component.InvokeAsync("PortfolioSection")

                        <!-- Contact Section -->
                        @await Component.InvokeAsync("ContactSection")

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
